<launch>
  <node pkg="rbx1_apps" name="follower" type="follower.py" output="screen">
    <remap from="point_cloud" to="/camera/rgb/points" />
    
    <rosparam>
       min_x: -0.2
       max_x: 0.2
       min_y: -0.05
       max_y: 0.5
       max_z: 1.0
       goal_z: 0.6
       z_threshold: 0.05
       x_threshold: 0.1
       z_scale: 2.0
       x_scale: 5.0
       max_angular_speed: 2.0
       min_angular_speed: 0.2
       max_linear_speed: 0.3
       min_linear_speed: 0.05
    </rosparam>
       
  </node>
</launch>
